<% if(messageType === 'danger') { %>

    <%- include('../404') %>

<% } else { %>

    <%- include('../partials/header') %>

    <%- include('../partials/navbar') %>

    <main class="container pt-4">
        <!-- Back Button & Requests Button-->
        <div class="mb-4 d-flex justify-content-between flex-wrap gap-2">
            <button
                class="btn btn-hover-secondary-subtle d-flex align-items-center gap-2 text-dark border border-secondary-subtle font-weight-bold"
                onclick="window.history.back()" style="font-weight: 500;">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor"
                    stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="scale: 0.8;">
                    <path d="M12 19l-7-7 7-7" />
                    <path d="M19 12H5" />
                </svg>
                Go Back
            </button>
            <div class="d-flex gap-2 flex-wrap">
                <% if (donation.status === 'Assigned' && donation.assignedNgoId) { %>
                    <a href="/ngo/<%= donation.assignedNgoId %>" class="btn btn-outline-primary me-2">
                        View Assigned NGO
                    </a>
                    <button type="button" class="btn btn-outline-success me-2" onclick="markAsPickedUp()">
                        Mark as Picked Up
                    </button>
                    <button type="button" class="btn btn-outline-danger" onclick="cancelDonationPickup()">
                        Cancel Pickup
                    </button>
                <% } %>
                <button type="button" class="btn btn-outline-warning" id="requestPickupBtn" data-bs-toggle="modal" data-bs-target="#requestDonationModal">
                    <i class="fas fa-plus me-1"></i>Request Pickup
                </button>
                <a href="/donations/<%= donation._id %>/edit">
                    <button type="button" class="btn btn-outline-warning">
                        <i class="fas fa-edit me-1"></i>Edit Donation
                    </button>
                </a>
                <a href="#donationRequests" style="text-decoration: none;">
                    <button
                        class="btn btn-hover-secondary-subtle d-flex align-items-center gap-2 text-dark border border-secondary-subtle font-weight-bold"
                        style="font-weight: 500;">
                        <i class="bi bi-plus"></i>Pickup Requests
                    </button>
                </a>
            </div>
        </div>

        <div class="row g-4">
            <!-- Left Column -->
            <div class="col-lg-8">
                <!-- Donation Header -->
                <div class="card mb-4">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-4">
                            <div>
                                <h2 class="card-title mb-2 fs-3">
                                    <%= donation.title %>
                                </h2>
                                <p class="text-muted mb-0">
                                    <%= donation.source %>
                                </p>
                            </div>
                            <span class="badge badge-<%= donation.status.toLowerCase() %> fs-6">
                                <%= donation.status %>
                            </span>
                        </div>
                        <div class="mb-4">
                            <div class="d-flex align-items-center justify-content-between">
                                <button class="btn btn-info" id="prevDonationImage">❮</button>
                                <div style="height: 60vh; width: 100%;" class="text-center">
                                    <img id="viewerDonationImage" src="<%= donation.images?.[0] || '/images/no-image.jpg' %>" class="rounded"
                                        style="max-height: 100%; width: 100%; object-fit: cover;" alt="Donation Image">
                                </div>
                                <button class="btn btn-info" id="nextDonationImage">❯</button>
                            </div>
                        </div>
                        <div class="mb-4">
                            <div class="mt-5">
                                <h3 class="fs-5 mb-2">Estimated number of people can be fed:</h3>
                                <p>
                                    <%= donation.numberOfPeopleFed || 'Not specified' %>
                                </p>
                            </div>
                            <div class="mt-4">
                                <h3 class="fs-5 mb-2">Description:</h3>
                                <p>
                                    <%= donation.description || 'No description provided.' %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-lg-4">
                <!-- Contact Information -->
                <div class="card mb-4">
                    <div class="card-header p-4">
                        <h3 class="fs-5 mb-0">Contact Information</h3>
                    </div>
                    <div class="card-body p-4 pt-0">
                        <div class="mb-3 d-flex align-items-center gap-2">
                            <span class="fs-5 text-secondary"><i class="bi bi-person" style="font-size: 1.3rem;"></i></span>
                            <div>
                                <div class="fw-medium">
                                    <%= donation.personName %>
                                </div>
                                <div class="text-muted small">Contact Person</div>
                            </div>
                        </div>
                        <div class="mb-3 d-flex align-items-center gap-2">
                            <span class="fs-5 text-secondary"><i class="bi bi-telephone"
                                    style="font-size: 1.15rem;"></i></span>
                            <div>
                                <div class="fw-medium">
                                    <%= donation.contact %>
                                </div>
                                <div class="text-muted small">Phone</div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <span class="fs-5 text-secondary">@</span>
                            <div>
                                <div class="fw-medium">
                                    <%= donation.email %>
                                </div>
                                <div class="text-muted small">Email</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Timeline -->
                <div class="card mb-4">
                    <div class="card-header p-4">
                        <h3 class="fs-5 mb-0">Timeline</h3>
                    </div>
                    <div class="card-body p-4 pt-0">
                        <div class="mb-3 d-flex align-items-center gap-2">
                            <span class="fs-5 text-secondary"><i class="bi bi-clock" style="font-size: 1.1rem;"></i></span>
                            <div>
                                <div class="fw-medium">Created</div>
                                <div class="text-muted small">
                                    <%= donation.createdAt.toLocaleString() %>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <span class="fs-5 text-secondary"><i class="bi bi-clock-history"
                                    style="font-size: 1.1rem;"></i></span>
                            <div>
                                <div class="fw-medium">Last Updated</div>
                                <div class="text-muted small">
                                    <%= donation.updatedAt.toLocaleString() %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Food Items Table -->
        <div class="card mb-4 p-4">
            <div class="card-header mb-4">
                <h3 class="fs-5 mb-0">Food Items</h3>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table align-middle table-bordered border rounded-3 overflow-hidden shadow-sm mb-1 tr-hover"
                        id="itemsTable" style="white-space: nowrap;">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Condition</th>
                                <th>Quantity</th>
                                <th>Cooked Date &amp; Time</th>
                                <th>Expiry Date &amp; Time</th>
                                <th>Images</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% donation.items.forEach((item, index)=> { %>
                                <tr>
                                    <td>
                                        <%= index + 1 %>
                                    </td>
                                    <td>
                                        <%= item.name %>
                                    </td>
        
                                    <!-- Type Badge -->
                                    <td>
                                        <span class="badge badge-type">
                                            <%= item.type %>
                                        </span>
                                    </td>
        
                                    <!-- Condition Badge -->
                                    <td>
                                        <span
                                            class="badge badge-<%= item.condition.toLowerCase().replace(/\s+/g, '') %> rounded-5">
                                            <%= item.condition %>
                                        </span>
                                    </td>
        
                                    <!-- Quantity with Unit -->
                                    <td>
                                        <%= item.quantity %>
                                            <%= item.unit %>
                                    </td>
        
                                    <!-- Cooked Date & Time -->
                                    <td>
                                        <%= item.cookedDate ? item.cookedDate.toLocaleDateString() : '' %> - <%= item.cookedTime
                                                %>
                                    </td>
        
                                    <!-- Expiry Date & Time -->
                                    <td>
                                        <% if (item.expiryDate || item.expiryTime) { %>
                                            <%= item.expiryDate ? item.expiryDate.toLocaleDateString() : '' %> - 
                                                <%= item.expiryTime || '' %>
                                        <% } else { %>
                                            <em>N/A</em>
                                        <% } %>
                                    </td>
        
                                    <!-- First Image & View All -->
                                    <td>
                                        <% if (item.itemImages && item.itemImages.length> 0) { %>
                                            <div class="border rounded p-1" style="max-width: 100px;">
                                                <img src="<%= item.itemImages[0] %>" alt="food item" class="img-fluid" />
                                                <div class="text-center hover-blue" data-bs-toggle="modal"
                                                    data-bs-target="#images-modal">
                                                    View all
                                                </div>
                                            </div>
                                        <% } else { %>
                                            <em>N/A</em>
                                        <% } %>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Pickup Location -->
        <div class="card mb-4 p-4">
            <div class="card-header mb-4 p-0">
                <h3 class="fs-5 mb-0">Pickup Location</h3>
            </div>
            <div class="card-body p-0">
                <div class="mb-3">
                    <div class="d-flex justify-content-between flex-wrap">
                        <div class="d-flex gap-2 flex-nowrap mb-2">
                            <span class="fs-4 text-secondary"><i class="bi bi-geo-alt"></i></span>
                            <div>
                                <p class="mb-0 fw-medium"> <%- donation.address %> </p>
                                <p class="mb-0 text-muted small"> 
                                    <%- donation.city + ', ' + donation.state + ' - ' + donation.pincode %> 
                                </p>
                            </div>
                        </div>
                        <div>
                            <a href="https://www.google.com/maps?q=<%- donation.location.latitude %>,<%- donation.location.longitude %>" target="_blank" style="text-decoration: none;">
                                <button class="btn btn-hover-secondary-subtle d-flex align-items-center gap-2 text-dark border border-secondary-subtle font-weight-bold" style="font-weight: 500;">
                                    <i class="fas fa-crosshairs"></i> Open in Google Maps
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
                <!-- Map Placeholder -->
                <div class="mt-2 donate-map-container">
                    <div class="donate-map-inner">
                        <div class="donate-map-bg"></div>
                        <div id="pickupMap"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pickup Requests from NGOs -->
        <% if(donation.status === 'New') { %>
            <div class="card mb-4 p-4" id="donationRequests">
                <div class="card-header p-0 mb-4">
                    <h3 class="fs-5 mb-1">Pickup Requests from NGOs</h3>
                    <p class="text-muted small mb-0">NGOs interested in picking up this donation</p>
                </div>
                <div class="card-body p-0">
                    <% if (donationRequests && donationRequests.length > 0) { %>
                        <% donationRequests.forEach((request, index) => { %>
                            <div class="d-flex align-items-start gap-3 border rounded p-3 mb-3 request-item">
                                <span class="rounded-circle bg-secondary d-flex align-items-center justify-content-center"
                                    style="width:48px;height:48px;">
                                    <%= request.ngoId.firstName ? request.ngoId.firstName.charAt(0).toUpperCase() : 'N' %>
                                </span>
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <div class="fw-semibold">
                                            <%= request.ngoId.firstName %> <%= request.ngoId.lastName %>
                                        </div>
                                        <span class="text-muted small">
                                            <%= request.requestDate ? new Date(request.requestDate).toLocaleDateString() : new Date(request.createdAt).toLocaleDateString() %>
                                        </span>
                                    </div>
                                    <div class="text-muted small mb-1">
                                        Contact: <%= request.ngoId.firstName %> <%= request.ngoId.lastName %> • <%= request.ngoId.contact %>
                                    </div>
                                    <div class="mb-2"><%= request.message %></div>
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-success btn-sm" onclick="approveRequest('<%= request._id %>')">
                                            <i class="bi bi-check2 me-2"></i>Accept
                                        </button>
                                        <button class="btn btn-danger btn-sm" onclick="rejectRequest('<%= request._id %>', this)">
                                            <i class="bi bi-x me-2"></i>Reject
                                        </button>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div class="text-center p-4">
                            <p class="text-muted mb-0">No pickup requests yet</p>
                        </div>
                    <% } %>
                </div>
            </div>
        <% } %>
    </main>

    <!-- Transparent Modal for viewing images -->
    <%- include('../partials/viewImagesModal') %>

    <!-- Modal for donation pickup request -->
    <div class="modal fade" id="requestDonationModal" tabindex="-1" aria-labelledby="requestDonationLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
        
        <!-- Modal Header -->
        <div class="modal-header">
            <h5 class="modal-title" id="requestDonationLabel">Request Donation</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <!-- Modal Body -->
        <div class="modal-body">
            <form id="requestDonationForm">
            <!-- Hidden Inputs -->
            <input type="hidden" id="donationId" name="donationId" value="<%= donation._id %>">
            <input type="hidden" id="donorId" name="donorId" value="<%= donation.donorId._id %>">
            <input type="hidden" id="ngoId" name="ngoId" value="<%= ngoId.toString() %>">

            <!-- Message Textarea -->
            <div class="mb-3">
                <label for="message" class="form-label">Message</label>
                <textarea id="message" name="message" class="form-control" rows="4" placeholder="Write your message here..." required></textarea>
            </div>

            <!-- Submit Button -->
            <div class="text-end">
                <button type="submit" class="btn btn-primary">Send Request</button>
            </div>
            </form>
        </div>

        </div>
    </div>
    </div>

    <!-- Modal for OTP verification -->
    <div class="modal fade" id="otpVerificationModal" tabindex="-1" aria-labelledby="otpVerificationLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
        
        <!-- Modal Header -->
        <div class="modal-header">
            <h5 class="modal-title" id="otpVerificationLabel">OTP Verification</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <!-- Modal Body -->
        <div class="modal-body">
            <div class="text-center mb-4">
            <p class="text-muted">An OTP has been sent to the donor's contact number for verification.</p>
            <p class="fw-bold">Please enter the OTP to mark this donation as picked up.</p>
            </div>
            
            <form id="otpVerificationForm">
            <!-- Hidden Inputs -->
            <input type="hidden" id="otpDonationId" name="donationId" value="<%= donation._id %>">
            
            <!-- OTP Input -->
            <div class="mb-4">
                <label for="otpInput" class="form-label">Enter OTP</label>
                <input type="text" id="otpInput" name="otp" class="form-control form-control-lg text-center" 
                    placeholder="Enter 6-digit OTP" maxlength="6" required>
                <div class="form-text">Please check the donor's phone for the OTP</div>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg">Verify OTP & Mark as Picked</button>
            </div>
            </form>
            
            <!-- Resend OTP Button -->
            <div class="text-center mt-3">
            <button type="button" class="btn btn-link" onclick="resendOTP()">
                Didn't receive OTP? Resend
            </button>
            </div>
        </div>

        </div>
    </div>
    </div>


    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
        const lat = parseFloat('<%= donation.location.latitude %>');
        const lng = parseFloat('<%= donation.location.longitude %>');

        const map = L.map('pickupMap').setView([lat, lng], 13);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© OpenStreetMap contributors'
        }).addTo(map);

        L.marker([lat, lng]).addTo(map)
            .bindPopup('Donation Pickup Location')
            .openPopup();
    </script>

    <!-- Embed donation.foodItems as JS -->
    <script>
        window.foodItems = <%- JSON.stringify(donation.items) %>;
        window.viewerDonationImages = <%- JSON.stringify(donation.images || []) %>;
        window.viewerDonationImagesIndex = 0;
        window.ngoId = '<%= ngoId ? ngoId.toString() : '' %>';
        if(ngoId) {
            console.log(ngoId);
        }

        // Function to approve donation request
        function approveRequest(requestId) {
            if (confirm('Are you sure you want to approve this request?')) {
                fetch(`/donations/<%= donation._id %>/requests/${requestId}/approve`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Request approved successfully!');
                        location.reload();
                    } else {
                        alert('Failed to approve request: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while approving the request');
                });
            }
        }

            // Function to reject donation request
        function rejectRequest(requestId, btn) {
            if (confirm('Are you sure you want to reject this request?')) {
                fetch(`/donations/<%= donation._id %>/requests/${requestId}/reject`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Request rejected successfully!');
                        // Remove the request item from the DOM without reloading
                        if (btn && btn.closest('.request-item')) {
                            btn.closest('.request-item').remove();
                        }
                    } else {
                        alert('Failed to reject request: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while rejecting the request');
                });
            }
        }

        // Function to cancel donation pickup
        function cancelDonationPickup() {
            if (confirm('Are you sure you want to cancel this donation pickup? This will allow you to assign it to another NGO.')) {
                fetch(`/donations/<%= donation._id %>/cancel-pickup`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Donation pickup cancelled successfully! You can now assign it to another NGO.');
                        location.reload();
                    } else {
                        alert('Failed to cancel pickup: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while cancelling the pickup');
                });
            }
        }

        // Function to mark donation as picked up
        function markAsPickedUp() {
            // Show OTP modal
            const otpModal = new bootstrap.Modal(document.getElementById('otpVerificationModal'));
            otpModal.show();
            
            // Send OTP to donor
            sendOTPToDonor();
        }

        // Function to send OTP to donor
        function sendOTPToDonor() {
            fetch(`/donations/<%= donation._id %>/send-otp`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    console.log('OTP sent successfully');
                } else {
                    alert('Failed to send OTP: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error sending OTP:', error);
                alert('Failed to send OTP');
            });
        }

        // Function to resend OTP
        function resendOTP() {
            sendOTPToDonor();
            alert('OTP resent successfully!');
        }

        // Handle OTP form submission
        document.getElementById('otpVerificationForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const otp = document.getElementById('otpInput').value;
            const donationId = document.getElementById('otpDonationId').value;
            
            if (!otp || otp.length !== 6) {
                alert('Please enter a valid 6-digit OTP');
                return;
            }
            
            // Verify OTP and mark as picked
            verifyOTPAndMarkPicked(donationId, otp);
        });

        // Function to verify OTP and mark donation as picked
        function verifyOTPAndMarkPicked(donationId, otp) {
            fetch(`/donations/${donationId}/verify-otp`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ otp })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('OTP verified successfully! Donation marked as picked up.');
                    
                    // Close modal
                    const otpModal = bootstrap.Modal.getInstance(document.getElementById('otpVerificationModal'));
                    otpModal.hide();
                    
                    // Reload page to show updated status
                    location.reload();
                } else {
                    alert('OTP verification failed: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while verifying OTP');
            });
        }
    </script>

    <%- include('../partials/footer') %>

<% } %>

